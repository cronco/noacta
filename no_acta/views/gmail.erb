<h3><%= t.gmail.adress %></h3>
<p><%= @email %></p>
  <% if session[:f_notice].nil? %>
    <% unless session[:f_not_user].nil? %>
      <p><%= session[:f_not_user] %></p>
    <% end %>
    <form action="/gmail/send" method="post">
      <label for="name">
        <%= t.gmail.name %>
        <input type="text" name="name" size="40" />
      </label>
      <input  type="hidden" name="email" value="<%=@email %>" />
      <input  type="hidden" name="token" value="<%= @access_token.token %>"/>
      <input  type="hidden" name="secret" value="<%= @access_token.secret %>"/>
      <input  type="submit" value="Send" class="button" />
    </form>
  <% else %>
    <h3><%= session[:f_notice] %></h3>
  <% end %>
